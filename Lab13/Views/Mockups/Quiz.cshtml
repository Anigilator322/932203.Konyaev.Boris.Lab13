@model Lab13.Models.QuizModel
@using Lab13.Services
@inject IQuizService QuizService
@{
	string action = ViewContext.RouteData.Values["Action"].ToString();
	ViewData["Title"] = action;
	var quizQuestion = QuizService.GetQuestion(Model);
}

<h2>@ViewData["Title"]</h2>

@quizQuestion.firstNum @quizQuestion.operation @quizQuestion.secondNum =
@using (Html.BeginForm(action, "Mockups", FormMethod.Post))
{
	<input type="number" name="answer" />
	Html.HiddenFor(model => Model.UserAnswers);
	<input type="submit" name="action" value="next" />
	<input type="submit" name="action" value="finish" />
}
